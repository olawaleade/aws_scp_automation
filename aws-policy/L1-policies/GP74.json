{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Sid": "AllowCloudTrailManagement",
        "Effect": "Allow",
        "Action": [
          "cloudtrail:CreateTrail",
          "cloudtrail:UpdateTrail",
          "cloudtrail:StartLogging"
        ],
        "Resource": "arn:aws:cloudtrail:ap-northeast-1:909424460760:trail/ccoe-cloudtrail-logs",
        "Condition": {
        "StringEquals": {
          "aws:ResourceTag/ccoe": "true"
        }
      }
      },
      {
        "Sid": "DenydisableAWSCloudTrail",
        "Effect": "Deny",
        "Action": [
          "cloudtrail:StopLogging",
          "cloudtrail:DeleteTrail"
        ],
        "Resource": "arn:aws:cloudtrail:ap-northeast-1:909424460760:trail/ccoe-cloudtrail-logs",
        "Condition": {
        "StringEquals": {
          "aws:ResourceTag/ccoe": "true"
        }
      }
      }
    ]
  }